{
  "compilerOptions": {
    "declaration": true,
    "jsx": "react",
    "strict": true,
    "lib": ["es2019", "dom"],
    "moduleResolution": "node",
    "module": "es2015",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
